<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/appImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appName"
            android:textSize="22sp"
            android:text="Name"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/appImage"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/background_dark"
            android:layout_below="@id/appName"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/appImage"/>
        <LinearLayout
            android:id="@+id/isPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/appImage">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_oplacheno_ili_net"/>
            <TextView
                android:id="@+id/isPayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Не сплачене"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/isPay"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/appImage">
            <ImageView
                android:id="@+id/isEndImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_nezakoncheno"/>
            <TextView
                android:id="@+id/isEndText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Незавершене"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>